<div id="signup-container">
  <div id="signup-form-container">
    <div id="signup-header"><h1>Sign up</h1></div>

    <form id="signup-form">
      <div id="signup-name-field">
        <label for="signup-name"></label>
        <input type="text" id="signup-name" placeholder="Name" />
      </div>

      <div id="signup-email-field" class="email">
        <label for="signup-email"></label>
        <input type="email" id="signup-email" placeholder="Email" />
      </div>

      <div id="signup-password-field" class="password">
        <label for="signup-password"></label>
        <input type="password" id="signup-password" placeholder="Password" />
      </div>

      <button type="submit" id="signup-btn">Create Account</button>
    </form>
  </div>
</div>