<div id="home-content">
  <div id="app-info-container">

    <div id="app-info">
      <h1 id="greeting">Welcome to FinanceFlow!</h1>

      <div id="app-summary">
        <p id="app-purpose">
          Take control of your finances with ease. Start saving 💰, reduce debt
          💳, and plan for the future 📈 with our intuitive tools.
        </p>

        <div id="app-features">
          <div class="feature-item">
            <span class="feature-icon">📊</span>
            <p class="feature-text">Track income and expenses effortlessly.</p>
          </div>
          <div class="feature-item">
            <span class="feature-icon">📋</span>
            <p class="feature-text">Get detailed financial overviews by
              category.</p>
          </div>
          <div class="feature-item">
            <span class="feature-icon">🎯</span>
            <p class="feature-text">Set and track your financial goals.</p>
          </div>
        </div>
      </div>

      <p id="call-to-action">Start your journey to financial clarity and
        success! 🚀</p>

      {{#if logged_in}}
        <button class="get-started-btn">View Financial Overview</button>
      {{else}}
        <button class="get-started-btn">Get Started!</button>
      {{/if}}

    </div>

    <div id="finance-img">
      <img src="/images/finance.jpeg" alt="Personal Finance Tracker App" />
    </div>
  </div>
</div>

<script src="/js/getStarted.js"></script>