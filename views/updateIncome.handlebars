<div id="update-income-container">
  <div id="update-income-form-container">
    <div id="update-income-header"><h1>Update Income</h1></div>

    <form id="update-income-form">
      <div id="update-income-amount-field">
        <label for="update-income-amount"></label>
        <input
          type="text"
          id="update-income-amount"
          placeholder="Amount"
          value={{income.amount}}
        />
      </div>

      <div id="update-income-source-field">
        <label for="update-income-source"></label>
        <input
          type="text"
          id="update-income-source"
          placeholder="Source"
          value={{income.source}}
        />
      </div>

      <div id="update-income-date-field">
        <label for="update-income-date"></label>
        <input
          type="text"
          id="update-income-date"
          placeholder="Date"
          value={{format_date income.date}}
        />
      </div>

      <button type="submit" id="update-income-btn">Update Income</button>

      <button id="delete-income-btn">Delete</button>
    </form>
  </div>
</div>